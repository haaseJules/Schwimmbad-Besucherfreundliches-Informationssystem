<UserControl x:Class="Teil2_Schwimmbad.MenüController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Teil2_Schwimmbad"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="20">
            <TextBlock Text="AquaMagica Erlebnisbad" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" />
            <TextBlock Text="Kontakte" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,10,0,0" />
            <TextBlock Text="Telefon: 0123 456 789" HorizontalAlignment="Left" Margin="0,5,0,0" />
            <TextBlock Text="Email: info@aquamagica.de" HorizontalAlignment="Left" Margin="0,5,0,0" />
            <TextBlock Text="Adresse: AquaMagica Erlebnisbad, Wassergasse 12, 12345 Fantasienstadt" HorizontalAlignment="Left" Margin="0,5,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20">
            <TextBlock Text="Preise" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" />
            <TextBlock Text="Tageskarte Erwachsene: 12,50 €" HorizontalAlignment="Left" Margin="0,10,0,0" />
            <TextBlock Text="Tageskarte Kinder (bis 12 Jahre): 8,00 €" HorizontalAlignment="Left" Margin="0,5,0,0" />
            <TextBlock Text="Familienticket (2 Erwachsene + 2 Kinder): 35,00 €" HorizontalAlignment="Left" Margin="0,5,0,0" />
            <TextBlock Text="Einzeleintritt Sauna: 7,50 €" HorizontalAlignment="Left" Margin="0,5,0,0" />
            <TextBlock Text="Abendticket (ab 18:00 Uhr): 8,00 €" HorizontalAlignment="Left" Margin="0,5,0,0" />
            <TextBlock Text="Monatskarte Erwachsene: 40,00 €" HorizontalAlignment="Left" Margin="0,5,0,0" />
            <TextBlock Text="Monatskarte Kinder (bis 12 Jahre): 25,00 €" HorizontalAlignment="Left" Margin="0,5,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
