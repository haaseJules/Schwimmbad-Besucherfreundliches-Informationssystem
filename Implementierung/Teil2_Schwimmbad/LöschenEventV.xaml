<UserControl x:Class="Teil2_Schwimmbad.LöschenEventV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Teil2_Schwimmbad"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
                <Border BorderBrush="Black" BorderThickness="1" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <RadioButton GroupName="Options" VerticalAlignment="Center" Margin="5" />
                        <TextBox Grid.Column="1" Margin="5" />
                    </Grid>
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <RadioButton GroupName="Options" VerticalAlignment="Center" Margin="5" />
                        <TextBox Grid.Column="1" Margin="5" />
                    </Grid>
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <RadioButton GroupName="Options" VerticalAlignment="Center" Margin="5" />
                        <TextBox Grid.Column="1" Margin="5" />
                    </Grid>
                </Border>
            </StackPanel>

            <Button Grid.Row="1" Content="Löschen" Margin="464,59,0,146"   />
        </Grid>
    </Grid>
</UserControl>
